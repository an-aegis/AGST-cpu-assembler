        Protected Function SystemTimeToDate(flags As Long, st As SYSTEMTIME) As Variant
            If flags = GDT_VALID Then
            	With st
                	Return DateSerial(st.wYear, st.wMonth, st.wDay) + TimeSerial(st.wHour, st.wMinute, st.wSecond)
            	End With
            Else
                Return Null
            End If
        End Function
        
        Protected Sub DateToSystemTime(ByVal Value As Date, st As SYSTEMTIME)
        	With st
                .wYear = CInt(VBA.Year(Value))
                .wMonth = CInt(VBA.Month(Value))
                .wDay = CInt(VBA.Day(Value))
                .wDayOfWeek = CInt(VBA.Weekday(Value))
                .wHour = CInt(VBA.Hour(Value))
                .wMinute = CInt(VBA.Minute(Value))
                .wSecond = CInt(VBA.Second(Value))
            End With
        End Sub
        
        Protected Function IsDateNullEqual(date1 As Variant, date2 As Variant) As Boolean
        	If IsNull(date1) Then
            	If IsNull(date2) Then
                	Return True
                Else
                    Return False
            	End If
            Else
                If IsNull(date2) Then
                	Return False
                Else
                    Return date1 = date2
                End If
        	End If
        End Function
        
        [IgnoreWarnings(TB0024)]
        Protected Sub HandleDropDown(ByRef Notification As NMHDR)
            SyncStartOfWeek()
            Me.RootWindowElementBase.RuntimeUIRemoveVisualStyles(Me.hWndCalendar, Me.VisualStyles = False)
            'Debug.Print "HandleDropDown " & Hex(Me.hWndCalendar)
            
            ' ' ' The system does not automatically set the size of the dropdown correctly based on the font etc (it probably calculates it during initialization)            
            ' ' ' The popup is in two parts - the outer HWND popup frame, and the inner calendar control
            
            Dim hWndCalendar As Any = Me.hWndCalendar
            Dim requiredRect As VB.tbRECT
            hWndCalendar.SendMessageW(MCM_GETMINREQRECT, 0, VarPtr(requiredRect))
            
            requiredRect.Right += 2
            requiredRect.Bottom += 2
            
            Dim styles As Long = hWndCalendar.GetWindowLongW(VB.GWL_STYLE)
            If styles And MCS_NOTODAY = 0 Then
                'As noted in the documentation for MCM_GETMINREQRECT, the returned rectangle doesn't include the "Today" string width
                Dim TodayWidth As Long = CLng(hWndCalendar.SendMessageW(MCM_GETMAXTODAYWIDTH, 0, 0))
                If TodayWidth > requiredRect.Right Then requiredRect.Right = TodayWidth
            End If
            hWndCalendar.SetWindowPos(0, 0, 0, requiredRect.Right, requiredRect.Bottom, VB.SWP_NOMOVE Or VB.SWP_NOOWNERZORDER Or VB.SWP_NOZORDER Or VB.SWP_SHOWWINDOW Or VB.SWP_NOACTIVATE Or VB.SWP_NOREDRAW Or VB.SWP_NOSENDCHANGING)
                        
            Dim popupParent As Any = hWndCalendar.GetParent()
            Dim stylesParent As Long = popupParent.GetWindowLongW(VB.GWL_STYLE)
            USER32.AdjustWindowRect(requiredRect, stylesParent, 0)
            popupParent.SetWindowPos(0, 0, 0, requiredRect.Right, requiredRect.Bottom, VB.SWP_NOMOVE Or VB.SWP_NOOWNERZORDER Or VB.SWP_NOZORDER Or VB.SWP_SHOWWINDOW Or VB.SWP_NOACTIVATE Or VB.SWP_NOREDRAW Or VB.SWP_NOSENDCHANGING)
                                    
            RaiseEvent DropDown
        End Sub
        
        Protected Sub HandleCloseUp(ByRef Notification As NMHDR)
            RaiseEvent CloseUp
        End Sub
        
        Protected Sub HandleDateTimeChange(ByRef Notification As NMDATETIMECHANGE)
            Dim NewValue As Variant = SystemTimeToDate(Notification.dwFlags, Notification.ST)
            If IsDateNullEqual(NewValue, Me.CachedValue) = False Then
                Me.CachedValue = Me.Value
                RaiseEvent Change
            End If
        End Sub
        
        Protected Sub HandleFormatQuery(ByRef Notification As NMDATETIMEFORMATQUERY)
            With Notification
                If .pszFormat <> 0 Then
                    Dim CallbackFieldId As String = OLEAUT32.SysAllocString(.pszFormat)
                End If
                Dim Size As Integer
                RaiseEvent FormatSize(CallbackFieldId, Size)
                If Size = 0 Then Size = 1
                If Me.Font Is Nothing Then
                    Me.InitializeOLEFont()
                End If
                Dim hDC As Any = RootWindowElementBase.RuntimeUIGetHandle().GetDC()
                Dim font As stdole.IFont = Me.Font
                Dim hFontOld As LongPtr = hDC.SelectObject(font.hFont)
                hDC.GetTextExtentPoint32W(String$(Size, "W"), Size, .szMax)
                If hFontOld <> 0 Then hDC.SelectObject(hFontOld)
                RootWindowElementBase.RuntimeUIGetHandle().ReleaseDC(hDC)
            End With
        End Sub

        Protected Sub HandleFormat(ByRef Notification As NMDATETIMEFORMAT)
            With Notification
                If .pszFormat <> 0 Then
                    Dim CallbackFieldId As String = OLEAUT32.SysAllocString(.pszFormat)
                End If
                Dim FormattedString As String
                RaiseEvent Format(CallbackFieldId, FormattedString)
                Notification.szDisplay = FormattedString & vbNullChar
            End With
        End Sub
        
        Protected Sub HandleFormatKeyDown(ByRef Notification As NMDATETIMEWMKEYDOWN)
            With Notification
                If .pszFormat <> 0 Then
                    Dim CallbackFieldId As String = OLEAUT32.SysAllocString(.pszFormat)
                End If
                Dim CallbackDate As Date = CDate(SystemTimeToDate(GDT_VALID, .ST))
                RaiseEvent CallbackKeyDown(CInt(.nVirtKey And &HFF), CInt(GetShiftState()), CallbackFieldId, CallbackDate)
                DateToSystemTime(CallbackDate, .ST)
            End With
        End Sub
        
        Protected Sub HandleNotify(ByRef Notification As NMHDR, MutedReturnValue As Variant) _
                Implements VB.IWindowElementEventsCommonControls.Notify
            
            'Debug.Print Now() & " " & CurrentProcedureName & " " & Hex(Notification.Code)
            Select Case Notification.Code
            	Case DTN_DROPDOWN
                    HandleDropDown(ByVal VarPtr(Notification))
            	Case DTN_CLOSEUP
                    HandleCloseUp(ByVal VarPtr(Notification))
                Case DTN_DATETIMECHANGE
                    HandleDateTimeChange(ByVal VarPtr(Notification))
                Case DTN_FORMATQUERYW
                    HandleFormatQuery(ByVal VarPtr(Notification))
                Case DTN_FORMATW
                    HandleFormat(ByVal VarPtr(Notification))
                Case DTN_WMKEYDOWNW
                    HandleFormatKeyDown(ByVal VarPtr(Notification))
            End Select
        End Sub
        
        Protected Sub HandleValidate(Cancel As Boolean) _
                Implements VB.IWindowElementEventsCommon.Validate

            RaiseEvent Validate(Cancel)
        End Sub
                
