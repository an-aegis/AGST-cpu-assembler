        [Serialize(False)]
        Public Property Let Week(ByVal Value As Integer)
            If Value <= 0 Or Value >= 54 Then Err.Raise 380
            Dim changeDelta As Long = Value - Me.Week
            If changeDelta <> 0 Then Me.Value = DateAdd("ww", changeDelta, Me.Value)
        End Property

