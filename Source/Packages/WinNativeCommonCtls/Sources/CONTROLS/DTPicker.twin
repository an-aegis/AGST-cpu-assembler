        [IgnoreWarnings(TB0024)]
        Protected Sub HandleMouseUp(ByVal Button As VBRUN.MouseButtonConstants, _
                                    ByVal ShiftState As VBRUN.ShiftConstants, _
                                    ByVal X As Single, ByVal Y As Single) _
                Implements VB.IWindowElementEventsCommon.MouseUp
            
            Dim ScaledPixX As Double = (X / Me.ControlContext.RuntimeUICtxGetScaleModePixelsMultiplierX())
            Dim ScaledPixY As Double = (Y / Me.ControlContext.RuntimeUICtxGetScaleModePixelsMultiplierY())
            'Dim PixX As Long = CLng(ScaledPixX * Me.RootWindowElement.UnitPixelScale)
            'Dim PixY As Long = CLng(ScaledPixY * Me.RootWindowElement.UnitPixelScale)
            'Dim IsDateDblClick As Boolean = False
            
            Dim _X As Single = X
            Dim _Y As Single = Y
            Dim WasDoubleClick As Boolean = False
            
            
            'EndMouseCapture()
            
            If (LastMouseUpX = X) And (LastMouseUpY = Y) Then
                Dim MouseUpTime As LongLong = KERNEL32.GetTickCount()
                Dim dblClickTime As Long = USER32.GetDoubleClickTime()
                Dim MouseClickTime As LongLong = (MouseUpTime - LastMouseUpTime)
                If MouseClickTime < dblClickTime Then
                	RaiseEvent DblClick()
                    WasDoubleClick = True
                    _X = -1  ' prevent further double click messages
                    _Y = -1
                End If
            End If
            
            RaiseEvent MouseUp(CInt(Button), CInt(ShiftState), X, Y)

             If EndMouseCapture() Then
                If WasDoubleClick = False Then
                    If IsInRect(ScaledPixX, ScaledPixY) Then
                         RaiseEvent Click()
                    End If
                End If
            End If

            LastMouseUpX = _X
            LastMouseUpY = _Y
            LastMouseUpTime = KERNEL32.GetTickCount()
        End Sub
        
